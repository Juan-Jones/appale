---
import Footer from "@components/footer.astro";
import Navbar from "@components/navbar.astro";
import "@fontsource/inter";
import { checkImageUrl } from "@utils/all";
import { SEO } from "astro-seo";

export interface Props {
  title?: string;
  desc?: string;
  ogimage?: string;
  frontmatter?: {
    title: string;
    excerpt: string;
    publishDate: string;
    author: string;
    tags: string[];
    category: string;
  };
  type?: "article" | "website";
}

const canonicalURL = new URL(Astro.url.pathname, Astro.site).toString();

const {
  title,
  desc,
  ogimage = "/opengraph.jpg",
  frontmatter,
  type = "website",
} = Astro.props;

const resolvedOGImage = checkImageUrl(ogimage, Astro.site);

const makeTitle = title
  ? title + " | " + "Codingly"
  : "Codingly â€” Blog for Developers";

// Create schema markup for articles
const schema = frontmatter
  ? {
      "@context": "https://schema.org",
      "@type": "BlogPosting",
      headline: frontmatter.title,
      description: frontmatter.excerpt,
      image: resolvedOGImage,
      datePublished: frontmatter.publishDate,
      author: {
        "@type": "Person",
        name: frontmatter.author,
      },
      keywords: frontmatter.tags.join(","),
      publisher: {
        "@type": "Organization",
        name: "Codingly",
        logo: {
          "@type": "ImageObject",
          url: `${Astro.site}favicon.svg`,
        },
      },
    }
  : {
      "@context": "https://schema.org",
      "@type": "WebSite",
      name: "Codingly",
      url: Astro.site,
    };
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <meta
      name="keywords"
      content="web development, programming, software engineering, coding"
    />

    <SEO
      title={makeTitle}
      description={desc ||
        "Codingly is a blog for developers. We write about web development, programming, and software engineering."}
      canonical={canonicalURL}
      twitter={{
        creator: "@stekatag",
        site: "@stekatag",
        card: "summary_large_image",
      }}
      openGraph={{
        basic: {
          url: canonicalURL,
          type: type,
          title: makeTitle,
          image: resolvedOGImage,
        },
        article: frontmatter
          ? {
              publishedTime: frontmatter.publishDate,
              authors: [frontmatter.author],
              section: frontmatter.category,
              tags: frontmatter.tags,
            }
          : undefined,
        image: {
          alt: "Codingly screenshot",
        },
      }}
    />

    <script type="application/ld+json" set:html={JSON.stringify(schema)} />
  </head>
  <body>
    <Navbar />
    <slot />
    <Footer />
    <style is:global>
      /* Improve Page speed */
      /* https://css-tricks.com/almanac/properties/c/content-visibility/ */
      img {
        content-visibility: auto;
      }
    </style>
    <script>
      declare global {
        interface Window {
          netlifyIdentity: any;
        }
      }

      if (window.netlifyIdentity) {
        window.netlifyIdentity.on("init", (user: any) => {
          if (!user) {
            window.netlifyIdentity.on("login", () => {
              document.location.href = "/admin/";
            });
          }
        });
      }
    </script>
  </body>
</html>
