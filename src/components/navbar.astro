---
import Container from "@components/container.astro";
import Link from "./ui/link.astro";
import { Image } from "astro:assets";

interface Menu {
  label: string;
  href: string;
  external?: boolean;
  badge?: string;
}

const leftmenu: Menu[] = [
  {
    label: "Home",
    href: "/",
  },
  {
    label: "Blog",
    href: "/blog",
  },
  {
    label: "About",
    href: "/about",
  },
];

const rightmenu: Menu[] = [
  {
    label: "Contact",
    href: "/contact",
  },
  {
    label: "Github",
    href: "https://github.com/stekatag",
    external: true,
    badge: "new",
  },
  {
    label: "LinkedIn",
    href: "https://www.linkedin.com/in/stefan-gogov/",
    external: true,
  },
];

const mobilemenu: Menu[] = [...leftmenu, ...rightmenu];
---

<Container>
  <nav aria-label="Main navigation">
    <ul class="flex flex-wrap justify-between md:gap-10 md:flex-nowrap">
      <li
        class="flex-col items-center justify-start order-1 hidden w-full md:flex md:flex-row md:justify-end md:w-auto md:order-none md:flex-1 gap-10">
        {
          leftmenu.map((item) => (
            <ul>
              <li>
                <Link
                  href={item.href}
                  style="underline"
                  size="unset"
                  title={item.label}>
                  {item.label}
                </Link>
              </li>
            </ul>
          ))
        }
      </li>

      <li class="flex items-center justify-between w-full md:w-auto">
        <a class="w-28 dark:hidden" href="/">
          <Image
            src="/logo.svg"
            alt="Logo"
            title="Codingly"
            width="250"
            height="150"
            loading="eager"
            class="w-full"
          />
        </a>

        <a class="hidden w-28 dark:block" href="/">
          <Image
            src="/logo-dark.svg"
            alt="Logo"
            title="Codingly"
            width="250"
            height="150"
            loading="eager"
            class="w-full"
          />
        </a>

        <button
          id="menu"
          aria-label="Toggle Menu"
          class="px-2 py-1 ml-auto text-gray-500 rounded-md md:hidden focus:text-blue-500 dark:focus:text-purple-500 focus:outline-none dark:text-gray-300">
          <svg
            class="w-6 h-6 fill-current"
            xmlns="http://www.w3.org/2000/svg"
            viewBox="0 0 24 24">
            <path
              class="navmenu-toggle"
              fill-rule="evenodd"
              d="M4 5h16a1 1 0 0 1 0 2H4a1 1 0 1 1 0-2zm0 6h16a1 1 0 0 1 0 2H4a1 1 0 0 1 0-2zm0 6h16a1 1 0 0 1 0 2H4a1 1 0 0 1 0-2z"
            ></path>

            <path
              class="navmenu-toggle hidden"
              fill-rule="evenodd"
              clip-rule="evenodd"
              d="M18.278 16.864a1 1 0 0 1-1.414 1.414l-4.829-4.828-4.828 4.828a1 1 0 0 1-1.414-1.414l4.828-4.829-4.828-4.828a1 1 0 0 1 1.414-1.414l4.829 4.828 4.828-4.828a1 1 0 1 1 1.414 1.414l-4.828 4.829 4.828 4.828z"
            ></path>
          </svg>
        </button>
      </li>

      <li
        class="flex-col gap-10 items-center justify-start order-2 hidden w-full md:flex md:flex-row md:w-auto md:flex-1 md:order-none">
        {
          rightmenu.map((item) => (
            <ul>
              <li>
                <Link
                  href={item.href}
                  style="underline"
                  size="unset"
                  title={item.label}>
                  {item.label}
                </Link>
              </li>
            </ul>
          ))
        }
      </li>
    </ul>

    <nav class="navmenu-toggle hidden">
      <ul
        class="flex flex-col items-center justify-start order-2 w-full md:hidden">
        {
          mobilemenu.map((item, index) => (
            <li class="px-5 py-3 ">
              <a
                href={item.href}
                class=" font-medium text-gray-600 dark:text-gray-400 hover:text-blue-500 dark:hover:text-purple-500"
                target={item.external ? "_blank" : ""}
                rel={item.external ? "noopener" : ""}
                title={item.label}>
                {item.label}
              </a>
            </li>
          ))
        }
      </ul>
    </nav>
  </nav>
</Container>

<script is:inline>
  const menuButton = document.getElementById("menu");
  menuButton.addEventListener("click", () => {
    [...document.querySelectorAll(".navmenu-toggle")].forEach((Element) => {
      Element.classList.toggle("hidden");
    });
  });
</script>
